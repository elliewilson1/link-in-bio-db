<div class="main-container">
  <div class="image-row">
    <img class="avatar-image" src="/ellie.jpg">
  </div>

  <div class="name-row">
    Ellie Wilson
  </div>

  <div class="social-icons-row">
    <a href="https://github.com/elliewilson1" target="_blank">
      <i class="fa-brands fa-square-github fa-3x"></i>
    </a>
    <a href="https://www.pinterest.com/ellie7186/_profile/" target="_blank">
      <i class="fa-brands fa-square-pinterest fa-3x"></i>
    </a>
    <a href="https://www.instagram.com/notelliewilson/" target="_blank">
      <i class="fa-brands fa-square-instagram fa-3x"></i>
    </a>
  </div>

  <div class="links-row">
    <% @list_of_items.each do |the_item| %>
      <div class="item">
        <img src="<%= the_item.thumbnail_url %>" class="thumbnail">

        <a class="link-text" target="_blank" href="<%= the_item.link_url %>">
          <%= the_item.link_description %>
        </a>
      </div>
    <% end %>
  </div>
</div>
